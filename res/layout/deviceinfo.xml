<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/rlLayout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
	android:background="@android:color/black">
	    
	    <TextView
	        android:id="@+id/showBrand"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:text="Brand"
	        android:textSize="16sp"
	        android:textStyle="bold" />
	
	    <TextView
	        android:id="@+id/deviceBrand"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/LightSalmon"
	        android:layout_below="@+id/showBrand"
	        android:layout_alignParentLeft="true"
	        android:textSize="14sp"
	        android:textStyle="italic" />
	
	    <TextView
	        android:id="@+id/showModel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:layout_below="@+id/deviceBrand"
	        android:layout_alignParentLeft="true"
	        android:text="Model"
	        android:textSize="16sp"
	        android:textStyle="bold" />
	
	    <TextView
	        android:id="@+id/deviceModel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/LightSalmon"
	        android:layout_below="@+id/showModel"
	        android:layout_alignParentLeft="true"
	        android:textSize="14sp"
	        android:textStyle="italic" />
	
	    <TextView
	        android:id="@+id/showOS"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:layout_below="@+id/deviceModel"
	        android:layout_alignParentLeft="true"
	        android:text="Android Version"
	        android:textSize="16sp"
	        android:textStyle="bold" />
	
	    <TextView
	        android:id="@+id/deviceOS"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/LightSalmon"
	        android:layout_below="@+id/showOS"
	        android:layout_alignParentLeft="true"
	        android:textSize="14sp"
	        android:textStyle="italic" />
	    
	    <TextView
	        android:id="@+id/showBoard"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:layout_below="@+id/deviceOS"
	        android:layout_alignParentLeft="true"
	        android:text="Board"
	        android:textSize="16sp"
	        android:textStyle="bold" />
	
	    <TextView
	        android:id="@+id/deviceBoard"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/LightSalmon"
	        android:layout_below="@+id/showBoard"
	        android:layout_alignParentLeft="true"
	        android:textSize="14sp"
	        android:textStyle="italic" />
	    
	    <TextView
	        android:id="@+id/showBootLoader"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:layout_below="@+id/deviceBoard"
	        android:layout_alignParentLeft="true"
	        android:text="Boot Loader"
	        android:textSize="16sp"
	        android:textStyle="bold" />
	
	    <TextView
	        android:id="@+id/deviceBootLoader"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/LightSalmon"
	        android:layout_below="@+id/showBootLoader"
	        android:layout_alignParentLeft="true"
	        android:textSize="14sp"
	        android:textStyle="italic" />
	    
	    <TextView
	        android:id="@+id/showCPUabi"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:layout_below="@+id/deviceBootLoader"
	        android:layout_alignParentLeft="true"
	        android:text="CPU ABI"
	        android:textSize="16sp"
	        android:textStyle="bold"/>
	
	    <TextView
	        android:id="@+id/deviceCPUabi"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/LightSalmon"
	        android:layout_below="@+id/showCPUabi"
	        android:layout_alignParentLeft="true"
	        android:textSize="14sp"
	        android:textStyle="italic" />
	    
	    <TextView
	        android:id="@+id/showCPUabi2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:layout_below="@+id/deviceCPUabi"
	        android:layout_alignParentLeft="true"
	        android:text="CPU ABI 2"
	        android:textSize="16sp"
	        android:textStyle="bold"/>
	
	    <TextView
	        android:id="@+id/deviceCPUabi2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/LightSalmon"
	        android:layout_below="@+id/showCPUabi2"
	        android:layout_alignParentLeft="true"
	        android:textSize="14sp"
	        android:textStyle="italic" />
	    
	    <TextView
	        android:id="@+id/showDisplay"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:layout_below="@+id/deviceCPUabi2"
	        android:layout_alignParentLeft="true"
	        android:text="Display"
	        android:textSize="16sp"
	        android:textStyle="bold"/>
	
	    <TextView
	        android:id="@+id/deviceDisplay"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/LightSalmon"
	        android:layout_below="@+id/showDisplay"
	        android:layout_alignParentLeft="true"
	        android:textSize="14sp"
	        android:textStyle="italic" />
	    
	    <TextView
	        android:id="@+id/showGLRenderer"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:layout_alignParentRight="true"
	        android:text="GPU Renderer"
	        android:textSize="16sp"
	        android:textStyle="bold"/>
	
	    <TextView
	        android:id="@+id/deviceGLRenderer"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/LightSalmon"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/showGLRenderer"
	        android:textSize="14sp"
	        android:textStyle="italic" />
	    
	    <TextView
	        android:id="@+id/showGLVendor"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:layout_below="@+id/deviceGLRenderer"
	        android:layout_alignParentRight="true"
	        android:text="GPU Vendor"
	        android:textSize="16sp"
	        android:textStyle="bold"/>
	
	    <TextView
	        android:id="@+id/deviceGLVendor"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/LightSalmon"
	        android:layout_below="@+id/showGLVendor"
	        android:layout_alignParentRight="true"
	        android:textSize="14sp"
	        android:textStyle="italic" />
	    
	    <TextView
	        android:id="@+id/showGLVersion"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:layout_below="@+id/deviceGLVendor"
	        android:layout_alignParentRight="true"
	        android:text="GPU Version"
	        android:textSize="16sp"
	        android:textStyle="bold"/>
	
	    <TextView
	        android:id="@+id/deviceGLVersion"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/LightSalmon"
	        android:layout_below="@+id/showGLVersion"
	        android:layout_alignParentRight="true"
	        android:textSize="14sp"
	        android:textStyle="italic" />
	    
	    <TextView
	        android:id="@+id/showSerial"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/deviceGLVersion"
	        android:text="Serial Number"
	        android:textSize="16sp"
	        android:textStyle="bold"/>
	
	    <TextView
	        android:id="@+id/deviceSerial"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/LightSalmon"
	        android:layout_below="@+id/showSerial"
	        android:layout_alignParentRight="true"
	        android:textSize="14sp"
	        android:textStyle="italic" />
	
	    <TextView
	        android:id="@+id/vmheap_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:layout_below="@+id/deviceSerial"
	        android:layout_alignParentRight="true"
	        android:text="Heap Size"
	        android:textStyle="bold" 
	        android:textSize="16sp"/>
	 
	    <TextView
	        android:id="@+id/vmheap"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/LightSalmon"
	        android:layout_below="@+id/vmheap_name"
	        android:layout_alignParentRight="true"
	        android:textSize="14sp"/>
	        
	    <TextView
	        android:id="@+id/vmAllocated_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:layout_below="@+id/vmheap"
	        android:layout_alignParentRight="true"
	        android:text="Allocated Memory"
	        android:textStyle="bold" 
	        android:textSize="16sp"/>
	 
	    <TextView
	        android:id="@+id/vmAllocated"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/LightSalmon"
	        android:layout_below="@+id/vmAllocated_name"
	        android:layout_alignParentRight="true"
	        android:textSize="14sp"/>
	        
	    <TextView
	        android:id="@+id/vmHeapLimit_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:layout_below="@+id/vmAllocated"
	        android:layout_alignParentRight="true"
	        android:text="Total Heap Size"
	        android:textStyle="bold" 
	        android:textSize="16sp"/>
	 
	    <TextView
	        android:id="@+id/vmHeapLimit"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/LightSalmon"
	        android:layout_below="@+id/vmHeapLimit_name"
	        android:layout_alignParentRight="true"
	        android:textSize="14sp"/>
	        
	    <TextView
	        android:id="@+id/nativeAllocatedMem_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:layout_below="@+id/vmHeapLimit"
	        android:layout_alignParentRight="true"
	        android:text="Native Memory"
	        android:textStyle="bold" 
	        android:textSize="16sp"/>
	 
	    <TextView
	        android:id="@+id/nativeAllocatedMem"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/LightSalmon"
	        android:layout_below="@+id/nativeAllocatedMem_name" 
	        android:layout_alignParentRight="true"
	        android:textSize="14sp"/> 

</RelativeLayout>